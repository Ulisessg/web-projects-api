{
  "version": 2,
  "routes": [
    {
      "src": "/api/blog/(.*)",
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Origin": "*"
      },
      "dest": "/api/index.js"
    },
    {
      "src": "/api/gist",
      "methods": [
        "GET"
      ],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Origin": "*"
      },
      "dest": "/api/index.js"
    },
    {
      "src": "/api/gist/add-gist",
      "methods": [
        "POST"
      ],
      "headers": {
        "Access-Control-Allow-Origin": "ulisessg.com",
        "Content-Type": "application/json"
      },
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "URI": "@last-uri",
    "PORT": "@port",
    "EMAIL": "@email",
    "PASSWORD": "@password"
  }
}