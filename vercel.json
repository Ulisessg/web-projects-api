{
  "version": 2,
  "builds": [
    {
      "src": "/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/blog/(.*)",
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Origin": "*"
      },
      "dest": "/api/index.js"
    },
    {
      "src": "/api/gist",
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Origin": "*",
        "dest": "/api/index.js"
      }
    },
    {
      "src": "/api/gist/add-gist",
      "headers": {
        "Access-Control-Allow-Origin": "https://ulisessg.com",
        "Content-Type": "application/json",
        "dest": "/api/index.js"
      }
    }
  ],
  "env": {
    "URI": "@uri",
    "PORT": "@port"
  }
}
